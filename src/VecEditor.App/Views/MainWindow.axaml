<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VecEditor.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:VecEditor.App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VecEditor.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="VecEditor">

	<Grid RowDefinitions="Auto,Auto,*">

		<!-- Ð¡Ð¢Ð ÐžÐšÐ ÐœÐ•ÐÐ® (Ð¿ÐµÑ€Ð²Ð°Ñ ÑÑ‚Ñ€Ð¾ÐºÐ°) -->
		<Menu Grid.Row="0" Margin="5">
			<MenuItem Header="_File">
				<MenuItem Header="_New"/>
				<MenuItem Header="_Open"/>
				<MenuItem Header="_Save"/>
				<Separator/>
				<MenuItem Header="E_xit"/>
			</MenuItem>
			<MenuItem Header="_Edit">
				<MenuItem Header="_Undo"/>
				<MenuItem Header="_Redo"/>
			</MenuItem>
			<MenuItem Header="_View">
				<MenuItem Header="Zoom In"/>
				<MenuItem Header="Zoom Out"/>
			</MenuItem>
		</Menu>

		<!-- ÐŸÐÐÐ•Ð›Ð¬ Ð˜ÐÐ¡Ð¢Ð Ð£ÐœÐ•ÐÐ¢ÐžÐ’ (Ð²Ñ‚Ð¾Ñ€Ð°Ñ ÑÑ‚Ñ€Ð¾ÐºÐ°) -->
		<UniformGrid Grid.Row="1"
                     Rows="1"
                     Columns="3"
                     Margin="5"
                     Height="80"
					 Background="">

			<!-- ÐšÐ¾Ð»Ð¾Ð½ÐºÐ° 1: ÐšÐ°Ñ€Ð°Ð½Ð´Ð°ÑˆÐ½Ñ‹Ðµ Ð¸Ð½ÑÑ‚Ñ€ÑƒÐ¼ÐµÐ½Ñ‚Ñ‹ -->
			<Border BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="3"
                    Margin="2"
                    Padding="5"
					Background="Gray">
				<StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="10">

					<ToggleButton Width="40" Height="40" ToolTip.Tip="Pen"
								  IsChecked="{Binding IsPenActive}"
								  Command="{Binding SelectPenCommand}">
						<Image Source="/Assets/pen.png" Width="32" Height="32"/>
					</ToggleButton>

					<ToggleButton Width="40" Height="40" ToolTip.Tip="Pencil"
								  IsChecked="{Binding IsPencilActive}"
								  Command="{Binding SelectPencilCommand}">
						<Image Source="/Assets/pencil.png" Width="32" Height="32"/>
					</ToggleButton>

					<ToggleButton Width="40" Height="40" ToolTip.Tip="Brush"
								  IsChecked="{Binding IsBrushActive}"
								  Command="{Binding SelectBrushCommand}">
						<Image Source="/Assets/brush.png" Width="32" Height="32"/>
					</ToggleButton>

					<ToggleButton Width="40" Height="40" ToolTip.Tip="Eraser"
								  IsChecked="{Binding IsEraserActive}"
								  Command="{Binding SelectEraserCommand}">
						<Image Source="/Assets/eraser.png" Width="32" Height="32"/>
					</ToggleButton>
				</StackPanel>
			</Border>

			<!-- ÐšÐ¾Ð»Ð¾Ð½ÐºÐ° 2: Ð¤Ð¸Ð³ÑƒÑ€Ñ‹ -->
			<Border BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="3"
                    Margin="2"
                    Padding="5"
					Background="Gray">
				<StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="10">

					<!-- ÐšÐ½Ð¾Ð¿ÐºÐ¸ Ð´Ð»Ñ Ñ„Ð¸Ð³ÑƒÑ€ -->
					<Button Width="40" Height="40" ToolTip.Tip="Rectangle">
						<Rectangle Width="30" Height="20"
                                   Fill="Transparent"
                                   Stroke="Black"
                                   StrokeThickness="2"/>
					</Button>

					<Button Width="40" Height="40" ToolTip.Tip="Ellipse">
						<Ellipse Width="30" Height="20"
                                 Fill="Transparent"
                                 Stroke="Black"
                                 StrokeThickness="2"/>
					</Button>

					<Button Width="40" Height="40" ToolTip.Tip="Circle">
						<Ellipse Width="25" Height="25"
                                 Fill="Transparent"
                                 Stroke="Black"
                                 StrokeThickness="2"/>
					</Button>

					<Button Width="40" Height="40" ToolTip.Tip="Triangle">
						<Path Data="M 0,25 L 20,25 L 10,3 Z"
                              Stroke="Black"
                              Fill="Transparent"
                              StrokeThickness="2"/>
					</Button>


					<Button Width="40" Height="40" ToolTip.Tip="Line">
						<Image Source="/Assets/line.png" Width="32" Height="32"/>
					</Button>

					<Button Width="40" Height="40" ToolTip.Tip="Arrow">
						<Image Source="/Assets/arrow.png" Width="32" Height="32"/>
					</Button>
				</StackPanel>
			</Border>

			<!-- ÐšÐ¾Ð»Ð¾Ð½ÐºÐ° 3: Work In Progress (Ð·Ð°Ð³Ð»ÑƒÑˆÐºÐ°) -->
			<Border BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="3"
                    Margin="2"
                    Padding="5"
                    Background="">
				<StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
					<TextBlock Text="ðŸš§ Work In Progress ðŸš§"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="Gray"/>
				</StackPanel>
			</Border>
		</UniformGrid>

		<!-- Ð ÐÐ‘ÐžÐ§ÐÐ¯ ÐžÐ‘Ð›ÐÐ¡Ð¢Ð¬ (Ñ‚Ñ€ÐµÑ‚ÑŒÑ ÑÑ‚Ñ€Ð¾ÐºÐ°) -->
		<Border Grid.Row="2"
                BorderBrush="LightGray"
                BorderThickness="2"
                Margin="5"
                CornerRadius="3"
                Background="WhiteSmoke">

			<TextBlock Text="{Binding SelectedTool}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       FontSize="16"/>

		</Border>
	</Grid>

</Window>
